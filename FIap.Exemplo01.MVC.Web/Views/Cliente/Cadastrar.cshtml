@model FIap.Exemplo01.MVC.Web.Models.Cliente
<!-- model que minha tela trabalha -->

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar Cliente</h2>

@if(@TempData["msg"] != null) { 
    @Helper.Mensagem(@TempData["msg"].ToString(), "alert alert-success") @* Meu Helper App_Code/Helper*@
}

<!--vai mandar para o controller Cliente e mesmo metodo da pagina, no caso Cadastrar, só que vai chamar o POST-->
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(c => c.Nome)
                @Html.TextBoxFor(c => c.Nome, new { placeholder = "Digite seu nome", @class = "form-control" }) <!--qualquer atributo do html, (arroba) é escape-->
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(c => c.Idade)
                @Html.TextBoxFor(c => c.Idade, new { placeholder = "Digite sua idade", @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(c => c.Credito)
                @Html.TextBoxFor(c => c.Credito, new { placeholder = "Digite seu Crédito", @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(c => c.DataNascimento)
                @Html.TextBoxFor(c => c.DataNascimento, new { placeholder = "dd/MM/yyyy", @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(c => c.EstadoCivil)
                @Html.DropDownListFor(c => c.EstadoCivil, ViewBag.estados as SelectList, "Selecione", new { @class = "form-control"})
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                @Html.CheckBoxFor(c => c.NecessidadesEspeciais)
                @Html.LabelFor(c => c.NecessidadesEspeciais)
            </div>
        </div>
    </div>
   


    <div class="form-group">
        @Helper.Submit("Salvar", "btn btn-success") @* Meu Helper App_Code/Helper*@
    </div>

}

