@model FIap.Exemplo01.MVC.Web.Models.Cliente

@{
    ViewBag.Title = "Editar";
}

<h2>Editar Cliente</h2>

@{
    if (@TempData["msg"] != null)
    {
        <div class="alert alert-success">
            @TempData["msg"]
        </div>
    }
}


<form action="/Cliente/Editar" method="post">

    <input type="hidden" value="@Model.Nome" name="nome" />

    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label for="nome">Nome</label>
                <input type="text" class="form-control" name="nome" id="nome" value="@Model.Nome" disabled />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label for="idade">Idade</label>
                <input type="text" class="form-control" name="idade" id="idade" value="@Model.Idade" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label for="dataNascimento">Data de Nascimento</label>
                <input type="text" class="form-control" name="dataNascimento" id="dataNascimento" value="@Model.DataNascimento" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <input type="checkbox" name="necessidadesEspeciais" id="necessidadesEspeciais" ="@Model.NecessidadesEspeciais" />
                <label for="necessidadesEspeciais">Possui Necessidades Especiais?</label>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label for="credito">Credito</label>
                <input type="text" class="form-control" name="credito" id="credito" value="@Model.Credito" />
            </div>
            <input type="submit" value="Salvar" class="btn btn-primary"  />
        </div>
    </div>
</form>



